<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/category_item_click_bg"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#64686a"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_total_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#64686a"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <CheckBox
            android:id="@+id/cb_junk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.chamsion.filemanager.widget.ProgressWheel
            android:id="@+id/pb_junk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:matProg_barColor="?attr/colorPrimary"
            app:matProg_barWidth="2dp"
            app:matProg_progressIndeterminate="true" />

    </RelativeLayout>
</LinearLayout>